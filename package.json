{
  "name": "daily-reports-bot",
  "version": "1.0.0",
  "description": "Telegram bot for collecting daily employee reports with Notion integration",
  "main": "src/app.js",
  "scripts": {
    "start": "node start.js",
    "start:bot": "node src/app.js",
    "start:webapp": "node webapp/server.js",
    "dev": "nodemon src/app.js",
    "webapp": "node webapp/server.js",
    "webapp:dev": "nodemon webapp/server.js",
    "all": "concurrently \"npm run dev\" \"npm run webapp:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "telegram",
    "bot",
    "notion",
    "reports"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@notionhq/client": "^2.2.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
